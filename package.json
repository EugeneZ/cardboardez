{
  "name": "cardboardez",
  "description": "CardboardEZ is a tool that helps simulate various tabletop games.",
  "author": "Eugene Zaretskiy",
  "private": true,
  "version": "0.0.1",
  "main": "src/server.js",
  "workspaces": [
    "apps/*",
    "games/summit"
  ],
  "dependencies": {
    "config": "^1.27.0",
    "husky": "^1.1.1"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.3",
    "cross-env": "^5.1.1",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.49.3",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.9.0",
    "flow-bin": "^0.74.0",
    "glow": "^1.2.2",
    "lint-staged": "7",
    "prettier": "1.13.0",
    "tape": "^4.6.0"
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
